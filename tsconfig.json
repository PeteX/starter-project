{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ]
}
