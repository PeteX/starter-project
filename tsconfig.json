{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es2019",
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ]
}
